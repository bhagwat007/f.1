<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:background="#454A5E"
    tools:context=".LiveFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="60dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="393dp"
            android:background="#454A5E"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Status"
                android:layout_width="74dp"
                android:layout_height="17dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#FFAB00"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/Compition"
                app:layout_constraintHorizontal_bias="0.144"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Tossdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/sfnsdisplaylight1"
                android:textColor="#AEEA00"
                android:gravity="center"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="parent" />

            <TableRow
                android:id="@+id/tableRow"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toTopOf="@+id/table1Row"
                tools:layout_editor_absoluteX="5dp">

                <TextView
                    android:id="@+id/liveteama"
                    android:layout_width="192dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/g"
                    android:textColor="@color/white"
                    android:text="TextView"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/livescoreteama"
                    android:layout_width="166dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/g"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="12sp"
                    />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="770dp"
                android:background="#F1EAED"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableRow
                android:id="@+id/table1Row"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="5dp">

                <TextView
                    android:id="@+id/liveteamb"
                    android:layout_width="193dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/g"
                    android:textColor="@color/white"
                    android:text="TextView"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/livescoreteamb"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/g"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="12sp"
                    />
            </TableRow>

            <TextView
                android:id="@+id/Compition"
                android:layout_width="200dp"
                android:layout_height="21dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="TextView"
                android:textSize="16sp"
                android:textColor="#00DDFF"
                android:fontFamily="@font/neohead"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_Livescore"
        android:layout_width="match_parent"
        android:layout_height="631dp"
        android:layout_marginTop="200dp">

    </androidx.recyclerview.widget.RecyclerView>

</FrameLayout>
