<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/cd1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#8193D3"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#454A5E"
        android:paddingLeft="1dp">

        <TextView
            android:id="@+id/runs"
            android:layout_width="187dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="68dp"
            android:fontFamily="@font/g"
            android:gravity="center_vertical"
            android:paddingLeft="19dp"
            android:text="@string/textview"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/batsmenname"
            android:layout_width="185dp"
            android:layout_height="38dp"
            android:layout_marginBottom="26dp"
            android:fontFamily="@font/g"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/teama"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/balls"
            android:layout_width="197dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/neohead"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="#00DDFF"

            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fours"
            android:layout_width="103dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"

            android:fontFamily="@font/g"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/sixex"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/runs"
            app:layout_constraintTop_toBottomOf="@+id/balls" />

        <TextView
            android:id="@+id/sixex"
            android:layout_width="103dp"
            android:layout_height="38dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/g"
            android:gravity="center"
            android:paddingRight="0dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/toss"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/batsmenname" />

        <TextView
            android:id="@+id/toss"
            android:layout_width="328dp"
            android:layout_height="23dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nexa"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#AEEA00"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/batsmenname"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/status"
            android:layout_width="71dp"
            android:layout_height="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/neohead"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFAB00"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/balls"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>