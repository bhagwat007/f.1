<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#454A5E"
    android:backgroundTint="#343743"
    android:paddingLeft="10dp">

    <TableRow
        android:layout_width="410dp"
        android:layout_height="36dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/commentrybowlername"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="TextView"
            android:fontFamily="@font/nexa"
            android:textColor="#FF9539"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/commentrybowlerruns"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:fontFamily="@font/robot"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/livebowlerovers"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/robot"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/bowler_maiden"
            android:layout_width="21dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robot"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/livebowlerwickets"
            android:layout_width="21dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/robot"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/livebowlereconmy"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/robot"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="30dp"
        android:background="#F1EAED"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>